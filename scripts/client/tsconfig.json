{
    "compilerOptions": {
        "module": "CommonJS",
        "strict": true,
        "strictNullChecks": true,
        "target": "esnext",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist",
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
